html
    head
        title Authentication Status
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
        style(type='text/css').
            body {
                padding-top: 60px;
                padding-bottom: 40px;
            }
            h1{
                font-family: "Times New Roman", Times, serif;
                color: #ff914d;
            }
            h2,h3{
                font-family: "Times New Roman", Times, serif;
            }
    body
        .container
            img(src="/logo.png" width="100" height="100" alt="")
            h1(style='font-family: "Times New Roman", Times, serif;') Registrum
            br

            .container.jumbotron
                h1(style='color:#000000') Authentication Status
                br
                .container
                    if authenticated==false
                        h2 Authentication failed.
                        br
                        p Wrong username or password!
                        p It seems like you're not logged in. Log in to view your dashboard.
                        form(action="/teacher/signin", method='post') 
                            input(
                                type = 'submit'
                                value = 'Log In'
                                class='btn-warning btn-lg'
                            )

                    else
                        p Hi #{data.name}! You are logged in. Proceed to your dashboard.
                        form(action="/teacher/dashboard", method='post') 
                            input(
                                type = 'submit'
                                value = 'Dashboard'
                                class='btn-success btn-lg'
                            )
