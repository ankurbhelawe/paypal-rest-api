html
    head
        title Created Course Status
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
        style(type='text/css').
            body {
                padding-top: 60px;
                padding-bottom: 40px;
            }
            h1{
                font-family: "Times New Roman", Times, serif;
                color: #ff914d;
            }
            h2,h3{
                font-family: "Times New Roman", Times, serif;
            }
    body
        .container
            img(src="/logo.png" width="100" height="100" alt="")
            h1(style='font-family: "Times New Roman", Times, serif;') Registrum
            br

            .container.jumbotron
                h1(style='color:#000000') Created Course Status
                br
                .container
                    if authenticated==false
                        h2 Authentication failed.
                        p It seems like you're not logged in. Log in to view your dashboard.
                        form(action="/teacher/signin", method='post') 
                            input(
                                type = 'submit'
                                value = 'Log In'
                                class = 'btn btn-lg btn-warning'
                            )

                    else
                        p Hi #{user.name}! 
                        if flag==0
                            h2 Course creation failed.
                            p Sorry! That course ID is taken! It should be unique. Please try again with a different course ID!
                            form(action="/teacher/create", method='post') 
                                input(
                                    type = 'submit'
                                    value = 'Create New Course'
                                    class ='btn btn-lg btn-warning'
                                )

                        else
                            h2 New course created!
                            p A new course has been created with the following details: 
                            table(class="table table-hover table-dark table-bordered")
                                tr
                                    td(style='color: #ff914d') ID:
                                    td #{data.id}
                                tr
                                    td(style='color: #ff914d') Title:
                                    td #{data.title}
                                tr
                                    td(style='color: #ff914d') Credits:
                                    td #{data.credits}
                                tr
                                    td(style='color: #ff914d') Date From:
                                    td #{data.date_from}
                                tr
                                    td(style='color: #ff914d') Date To:
                                    td #{data.date_to}
                                tr
                                    td(style='color: #ff914d') Duration:
                                    td #{data.duration}
                                tr
                                    td(style='color: #ff914d') Teacher ID:
                                    td #{data.teacher_id}
                                tr
                                    td(style='color: #ff914d') Teacher Name:
                                    td #{data.teacher_name}
                                tr
                                    td(style='color: #ff914d') Description:
                                    td #{data.description}
                            form(action="/teacher/dashboard", method='post') 
                                input(
                                    type = 'submit'
                                    value = 'Go to Dashboard'
                                    class='btn btn-secondary'
                                )
