html
    head
        title Sign Up Status
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
        style(type='text/css').
            body {
                padding-top: 60px;
                padding-bottom: 40px;
            }
            h1{
                font-family: "Times New Roman", Times, serif;
                color: #ff914d;
            }
            h2,h3{
                font-family: "Times New Roman", Times, serif;
            }
    body
        .container
            img(src="/logo.png" width="100" height="100" alt="")
            h1(style='font-family: "Times New Roman", Times, serif;') Registrum
            br

            .container.jumbotron
                h1(style='color:#000000') Sign Up Status
                br
                .container
                    if flag==0
                        h2 Sign Up Unsuccessful.
                        p Sorry! That teacher ID is taken! It should be unique. Please try again with a different teacher ID!
                        form(action="/teacher/signup", method='post') 
                            input(
                                type = 'submit'
                                value = 'Sign Up'
                                class = 'btn-warning btn-lg'
                            )

                    else
                        h2 #{message}
                        p Hi #{data.name}! You have been successfully signed up with Teacher ID #{data.id}! Please proceed to log in below:
                        form(action="/teacher/signin", method='post') 
                            input(
                                type = 'submit'
                                value = 'Log In'
                                class = 'btn-success btn-lg'
                            )