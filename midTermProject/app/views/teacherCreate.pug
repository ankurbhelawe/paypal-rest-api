html
    head
        title Create Course
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
        style(type='text/css').
            body {
                padding-top: 60px;
                padding-bottom: 40px;
            }
            h1{
                font-family: "Times New Roman", Times, serif;
                color: #ff914d;
            }
            h2,h3{
                font-family: "Times New Roman", Times, serif;
            }
    body
        .container
            img(src="/logo.png" width="100" height="100" alt="")
            h1(style='font-family: "Times New Roman", Times, serif;') Registrum
            br

            .container.jumbotron
                h1(style='color:#000000') Create Course
                br
                .container
                    if authenticated==false
                        h2 Authentication failed.
                        p It seems like you're not logged in. Log in to view your dashboard.
                        form(action="/teacher/signin", method='post') 
                            input(
                                type = 'submit'
                                value = 'Log In'
                                class = 'btn btn-lg btn-warning'
                            )

                    else
                        h2 Enter details
                        br
                        p Please enter new course details:
                        form(action="/teacher/createSuccess", method='post', class='form-group')
                            input(
                                type='text'
                                name = 'id'
                                placeholder='Course ID'
                                class='form-control'
                            )
                            br
                            input(
                                type='text'
                                name = 'title'
                                placeholder='Course Title'
                                class='form-control'
                            )
                            br
                            input(
                                type='text'
                                name = 'description'
                                placeholder='Course Description'
                                class='form-control'
                            )
                            br
                            input(
                                type='date' 
                                name='date_from'
                                placeholder = 'Date From'
                                class='form-control'
                            )
                            br
                            input(
                                type='date' 
                                name='date_to'
                                placeholder = 'Date From'
                                class='form-control'
                            )
                            br
                            input(
                                type='number'
                                name = 'duration'
                                placeholder='Course duration (Session Hours)'
                                class='form-control'
                            )
                            br
                            input(
                                type='number'
                                name = 'credits'
                                placeholder='Course Credits'
                                class='form-control'
                            )
                            br
                            input(
                                type = 'submit'
                                value = 'Create Course'
                                class='btn btn-success'
                            )
                            
                        br
                        form(action="/teacher/dashboard", method='post') 
                            input(
                                type = 'submit'
                                value = 'Go to Dashboard'
                                class='btn btn-secondary'
                            )
